<% layout('layouts/boilerplate') -%>
<h1 class="mt-4 mb-4">Nouvelle Expidtion</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Nouvelle Expidtion</li>
</ol>
<div class="row container">
    <div>
        <form id="inputXlsx" method="GET" class="row g-3 needs-validation" novalidate="novalidate">

            <div class="row col-lg-12">
                <div class="col-6">
                    <div class="mb-3">
                        <label for="formFile" class="form-label">Importer la demande des clients</label>
                        <input class="form-control" type="file" id="input" accept=".xls,.xlsx" required="required">
                            <div class="invalid-feedback">
                                Saisissez le fichier.
                            </div>
                        </div>
                    </div>
                    <div class="d-flex col-6">
                        <div class="align-self-end mb-3">
                            <button id="button" class="btn btn-outline-primary" type="button">Importer
                            </button>
                        </div>
                    </div>
                </div>
                <div class="row col-lg-12">
                    <div class="d-flex flex-column text-left col-6">
                        <div>
                            <label class="form-label">Choisir les types de vehicules a utiliser:</label>
                        </div>
                        <div>
                            <strong class="sl">Choisir un Type</strong>
                            <select id="multiple-checkboxes" multiple="multiple" required="required">
                                <% for(let type of vehcules){ %>
                                    <option value="<%= type.poidMaximum %>tonnes"><%= type.poidMaximum %>
                                        tonnes
                                    </option>
                                <%  }%>
                            </select>
                        </div>

                    </div>
                </div>

                <div class="d-flex justify-content-center col-lg-12 mt-7">
                    <div class="p-3">
                        <a class="btn btn-outline-primary" href="/expidtions">Retour</a>
                    </div>
                    <div class="p-3">
                        <button class="btn btn-outline-success" type="submit">Suivant</button>
                    </div>


                </div>
            </form>
        </div>
    </div>

    <script src="/javascript/jquery.min.js"></script>
    <script src="/javascript/popper.js"></script>
    <script src="/javascript/bootstrap.min.js"></script>
    <script src="/javascript/bootstrap-multiselect.js"></script>
    <script src="/javascript/main.js"></script>
    <script src="/javascript/importData.js"></script>
