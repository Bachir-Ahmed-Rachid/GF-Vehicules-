<% layout('layouts/boilerplate') -%>
<h1 class="mt-4">Detaile du Vehicule</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Detaile du Vehicule</li>
</ol>
<div class="row">
    <div class="col-4">
        <div class="card mb-4">
            <div class="card-header">
                <i class="fas fa-table me-1"></i>
                Vehicule:<%= vehiculeActif.index %>
            </div>
            <img src='<%= vehiculeActif.image %>.png' class="card-img-top" alt="...">

                <div class="card-body">
                    <table id="datatablesSimple">
                        <tbody>
                            <tr>
                                <th scope="col">Id</th>
                                <td scope="col"><%=vehiculeActif._id %></td>
                            </tr>
                            <tr>
                                <th scope="col">Type</th>
                                <td scope="col"><%=vehiculeActif.type %></td>
                            </tr>
                            <tr>
                                <th scope="col">Capacite</th>
                                <td scope="col"><%= vehiculeActif.capacite %></td>
                            </tr>
                            <tr>
                                <th scope="col">Villes a vister</th>
                                <td scope="col"><%= vehiculeActif.routing %></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
            <div class="d-flex justify-content-end">
                <a class="btn btn-outline-primary btn-sm" href="/expidtions/<%= Expid._id %> ">Retour</a>
            </div>
        </div>
        <div class="col-8">
            <div id='map3' style="width: 100%; height: 600px;"></div>
        </div>

    </div>


    <script>
        const vehiculeActif = '<%-JSON.stringify(vehiculeActif)%>'
    </script>
    <script src="/javascript/showOneRoutingMap.js"></script>
