<% layout('layouts/boilerplate') -%>
<div class="container-fluid px-4">
    <h1 class="mt-4">Charts</h1>
    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-chart-area me-1"></i>
            Graphique
        </div>
        <div class="card-body">
            <canvas id="myAreaChart" width="100%" height="30"></canvas>
        </div>
        <div class="card-footer small text-muted"><%= customerCharts.Customer %>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-bar me-1"></i>
                    Graphique en Bar
                </div>
                <div class="card-body">
                    <canvas id="myBarChart" width="100%" height="50"></canvas>
                </div>
                <div class="card-footer small text-muted"></div>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-chart-pie me-1"></i>
                    Graphique en Pie
                </div>
                <div class="card-body">
                    <canvas id="myPieChart" width="100%" height="50"></canvas>
                </div>
                <div class="card-footer small text-muted"></div>
            </div>
        </div>
    </div>
    <div class="d-flex justify-content-start">
        <a class="btn btn-outline-primary btn-sm" href="/customerCharts">Retour</a>
    </div>
</div>

<script>
    const customerCharts = '<%-JSON.stringify(customerCharts.infoChart)%>'
</script>
<script src="/javascript/chart-area-demo.js"></script>
<script src="/javascript/chart-bar-demo.js"></script>
<script src="/javascript/chart-pie-demo.js"></script>
