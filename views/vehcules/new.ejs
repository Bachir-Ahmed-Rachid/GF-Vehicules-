<% layout('layouts/boilerplate') -%>
<h1 class="mt-4">Nouveau Vehicule</h1>
<ol class="breadcrumb mb-4">
    <li class="breadcrumb-item active">Nouveau Vehicules</li>
</ol>
<div class="row mt-4">
    <div class="col-6">
        <form action="/vehcules" method="post" class="needs-validation" novalidate="novalidate">
            <div class="mb-3">
                <label class="form-label" for="discreption">Discreption:</label>
                <input class="form-control" type="text" id="discreption" name="vehculeType[discreption]" required="required">
                    <div class="invalid-feedback">
                        Saisissez la discreption du vehicule.
                    </div>
                </div>
                <div class="mb-3">
                    <div class="mb-3">
                        <label class="form-label" for="type">Type:</label>
                        <input class="form-control" type="text" id="type" name="vehculeType[type]" required="required">
                            <div class="invalid-feedback">
                                Saisissez le type du vehicule.
                            </div>
                        </div>
                        <div class="mb-3">
                            <label class="form-label" for="image">Photo:</label>
                            <input class="form-control" type="text" id="image" name="vehculeType[image]" required="required">
                                <div class="invalid-feedback">
                                    Saisissez la photo du vehicule.
                                </div>
                            </div>
                            <div class="mb-3">
                                <label class="form-label" for="type">Cout:</label>
                                <input class="form-control" type="text" id="type" name="vehculeType[cost]" required="required">
                                    <div class="invalid-feedback">
                                        Saisissez le cout du vehicule.
                                    </div>
                                </div>
                                <div class="mb-3">
                                    <label class="form-label" for="capacité">Poids maximum:</label>
                                    <div class="input-group mb-3">
                                        <span class="input-group-text">Tonnes</span>
                                        <input class="form-control" type="text" id="capacité" name="vehculeType[poidMaximum]" required="required">
                                            <div class="invalid-feedback">
                                                Saisissez Poids maximum.
                                            </div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <label class="form-label" for="capacité">Dimension maximum:</label>
                                        <div class="input-group mb-3">
                                            <span class="input-group-text">M3</span>
                                            <input class="form-control" type="text" id="capacité" name="vehculeType[dimentionMaximum]" required="required">
                                                <div class="invalid-feedback">
                                                    Saisissez la Dimension maximum.
                                                </div>
                                            </div>
                                        </div>

                                        <div class="d-flex justify-content-between mb-3">
                                            <a class="btn btn-primary" href="/vehcules">Retour</a>
                                            <button class="btn btn-success" type="submit">Ajouter</button>
                                        </div>
                                    </form>
                                </div>
                            </div>
